{
  "variables": {
    "do_token": "",
    "branch": "",
    "region": "",
    "namepace": "",
    "app": ""
  },
  "builders": [{
    "type": "digitalocean",
    "api_token": "{{user `do_token`}}",
    "image": "docker-16-04",
    "region": "{{user `region`}}",
    "size": "1gb",
    "droplet_name": "{{user `namespace`}}-{{user `app`}}-{{user `branch`}}",
    "snapshot_name": "{{user `namespace`}}-{{user `app`}}-{{user `branch`}}",
    "ssh_username": "root"
  }],
  "provisioners":  [
    {
      "type": "shell",
      "inline": [
        "sudo mkdir /app"
      ]},
    {
      "type": "file",
      "source": "../../dev/",
      "destination": "/app"
    },
    { 
      "type": "shell",
      "inline": [
        "cd /app",
        "docker-compose -p \"api\" up --no-start"
      ]
    }
  ],
  "post-processors": [{
    "type": "manifest",
    "output": "node_manifest.json",
    "strip_path": true
  }]
}