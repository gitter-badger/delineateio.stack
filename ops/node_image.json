{
  "variables": {
    "short_branch": "",
    "do_api_token": "{{env `DIGITALOCEAN_ACCESS_TOKEN`}}"
  },
  "builders": [{
    "type": "digitalocean",
    "api_token": "{{user `do_api_token`}}",
    "image": "ubuntu-16-04-x64",
    "region": "lon1",
    "size": "512mb",
    "droplet_name": "io-delineate-node-{{user `short_branch`}}",
    "snapshot_name": "io-delineate-node-{{user `short_branch`}}",
    "ssh_username": "root"
  }],
  "provisioners":  [
    {
      "type": "file",
      "source": "install_docker.sh",
      "destination": "/tmp/"
    }],
  "post-processors": [{
    "type": "manifest",
    "output": "node_manifest.json",
    "strip_path": true
  }]
}
