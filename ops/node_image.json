{
  "variables": {
    "short_branch": "",
    "do_api_token": "{{env `DIGITALOCEAN_ACCESS_TOKEN`}}"
  },
  "builders": [{
    "type": "digitalocean",
    "api_token": "{{user `do_api_token`}}",
    "image": "ubuntu-16-04-x64",
    "region": "lon1",
    "size": "512mb",
    "droplet_name": "io-delineate-node-{{user `short_branch`}}",
    "snapshot_name": "io-delineate-node-{{user `short_branch`}}",
    "ssh_username": "root"
  }],
  "provisioners":  [
    {
      "type": "shell",
      "inline": [
        "curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo apt-key add -",
        "sudo add-apt-repository \"deb [arch=amd64] https://download.docker.com/linux/ubuntu $(lsb_release -cs) stable\"",
        "sudo apt-get update",
        "sudo apt-get install -y docker-ce"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "sudo mkdir /app",
      ]},
    {
      "type": "file",
      "source": "../dev/",
      "destination": "/app"
    }  
  ],
  "post-processors": [{
    "type": "manifest",
    "output": "node_manifest.json",
    "strip_path": true
  }]
}
