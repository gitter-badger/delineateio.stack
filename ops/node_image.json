{
  "variables": {
    "short_branch": "",
    "do_api_token": "{{env `DIGITALOCEAN_ACCESS_TOKEN`}}"
  },
  "builders": [{
    "type": "digitalocean",
    "api_token": "{{user `do_api_token`}}",
    "image": "Ubuntu Docker 17.12.0~ce on 16.04",
    "region": "lon1",
    "size": "512mb",
    "droplet_name": "io-delineate-node-{{user `short_branch`}}",
    "snapshot_name": "io-delineate-node-{{user `short_branch`}}",
    "ssh_username": "root"
  }],
  "provisioners":  [
    {
      "type": "shell",
      "inline": [
        "sudo mkdir /app"
      ]},
    {
      "type": "file",
      "source": "../dev/",
      "destination": "/app"
    },
    { 
      "type": "shell",
      "inline": [
        "cd /app",
        "docker-compose -p \"api\" up --scale api-app=3 -d"
      ]
    }
  ],
  "post-processors": [{
    "type": "manifest",
    "output": "node_manifest.json",
    "strip_path": true
  }]
}
