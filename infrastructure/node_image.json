{
  "variables": {
    "do_api_token": "{{env `DIGITALOCEAN_ACCESS_TOKEN`}}"
  },
  "builders": [{
    "type": "digitalocean",
    "api_token": "{{user `do_api_token`}}",
    "image": "ubuntu-16-04-x64",
    "region": "lon1",
    "size": "512mb",
    "droplet_name": "io-delineate-node",
    "snapshot_name": "io-delineate-node-{{timestamp}}",
    "ssh_username": "root"
  }],
  "post-processors": [{
    "type": "manifest",
    "output": "node_manifest.json",
    "strip_path": true
  }]
}
