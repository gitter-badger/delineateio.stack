{
  "variables": {
    "do_api_token": "{{env `DIGITALOCEAN_ACCESS_TOKEN`}}"
  },
  "builders": [{
    "type": "digitalocean",
    "api_token": "{{user `do_api_token`}}",
    "image": "ubuntu-14-04-x64",
    "region": "nyc3",
    "size": "512mb",
    "ssh_username": "root"
  }],
  "post-processors": [{
    "type": "manifest",
    "output": "packer-manifest.json",
    "strip_path": true
  }]
}
